    <script src="https://code.jquery.com/jquery-3.5.1.min.js"
        integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
    <script>
        function callPost(route, dataToSend, handleResponse) {
            showSpinner();
            let status;
            let headersToSend = { 'Content-Type': 'application/json' };
            let access_token = getFromLocalStorage('access_token');
            if (access_token) headersToSend = {
                'Content-Type': 'application/json',
                'Authorization': access_token
            };
            console.log("sending with headers: ");
            console.log(headersToSend);
            fetch(route, {
                method: 'POST',
                headers: headersToSend,
                body: JSON.stringify({ data: dataToSend })
            }).then(response => {
                status = response.status;
                return response.json();
            }).then(data => {
                hideSpinner();
                if (status == 401) logout();
                if (status == 404) {
                    alert(data.message);
                    window.location.href = "/publications/" + getFromLocalStorage('user').id;
                }
                else handleResponse(status, data);
            }).catch((error) => {
                hideSpinner();
                alert(error.message);
                console.error('Error:', error);
            });
        }

        function callGet(route, handleResponse) {
            showSpinner();
            let status;
            let headersToSend = { 'Content-Type': 'application/json' };
            let access_token = getFromLocalStorage('access_token');
            if (access_token) headersToSend = {
                'Content-Type': 'application/json',
                'Authorization': access_token
            };
            console.log("sending with headers: ");
            console.log(headersToSend);
            fetch(route, {
                method: 'GET',
                headers: headersToSend
            }).then(response => {
                status = response.status;
                return response.json();
            }).then(data => {
                hideSpinner();
                if (status == 401) logout();
                if (status == 404) {
                    alert(data.message);
                    window.location.href = "/publications/" + getFromLocalStorage('user').id;
                }
                else handleResponse(status, data);
            }).catch((error) => {
                hideSpinner();
                alert(error.message);
                console.log(error);
            });
        }

        function saveInLocalStorage(key, data) {
            if (data)
                localStorage.setItem(key, JSON.stringify(data));
        }

        function getFromLocalStorage(key) {
            let data = localStorage.getItem(key);
            return data ? JSON.parse(data) : null;
        }

        function removeFromLocalStorage(key) {
            localStorage.removeItem(key);
        }

        function showSpinner() {
            $('#spinner').addClass('show');
        }

        function hideSpinner() {
            $('#spinner').removeClass('show');
        }

        function logout() {
            removeFromLocalStorage('access_token');
            removeFromLocalStorage('user');
            removeFromLocalStorage('back');
            window.location.href = '/login'
        }

        function handleVerifications(data) {
            console.log(data);
            Object.keys(data.body).map(function (key, index) {
                let errors = data.body[key];
                errors.forEach(element => {
                    $(`#${key}-errors`).text("");
                });
                errors.forEach(element => {
                    $(`#${key}-errors`).append(element);
                    $(`#${key}-errors`).append('<br>');
                });
            });
        }

        if (getFromLocalStorage('access_token')) {
            $('#my-publications-a').attr('href', `/publications/${getFromLocalStorage('user').id}`);
            callGet('/me', (status, data) => {
                if (status == 200) {
                    if (['/login', '/register'].indexOf(window.location.pathname) >= 0) {
                        let user = getFromLocalStorage('user');
                        window.location.href = '/publications/' + user.id;
                    }
                    setCategories('categories-select');
                } else {
                    logout();
                }
                $('#navbar').addClass('show');
            });
        } else {
            if (['/login', '/register'].indexOf(window.location.pathname) < 0) {
                window.location.href = '/login';
            }
            $('#navbar').removeClass('show');
        }

        function setCategories(id) {
            let categories = getFromLocalStorage('categories');
            categories.forEach(element => {
                $('#' + id).append(`
                    <option value="${element.id}">${element.name}</option>
                `);
            });
        }
    
        $("input").keydown(function () {
            let id = $(this).attr('id');
            $(`#${id}-errors`).text("");
        });

        $("textarea").keydown(function () {
            let id = $(this).attr('id');
            $(`#${id}-errors`).text("");
        });

        $("select").change(function(){
            let id = $(this).attr('id');
            $(`#${id}-errors`).text("");
        });

    </script>
    <%{{ script }}%>
</body>

</html>